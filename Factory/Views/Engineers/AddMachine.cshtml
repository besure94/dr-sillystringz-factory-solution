@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer
@using Factory.Models

<h2>Add a machine</h2>

<p><strong>NOTE:</strong> You need to have at least one machine before you can add one to an engineer.</p>
<p>Go to @Html.ActionLink("this page", "Create", "Machines") to create a machine.</p>

<h4>Add a machine to this engineer: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  @Html.Label("Select machine")
  @Html.DropDownList("MachineId")
  <input type="submit" class="btn btn-primary" value="Add machine"/>
}
<br>
<p>@Html.ActionLink("Create a new machine", "Create", "Machines")</p>
<p>@Html.ActionLink("Back to engineer list", "Index")</p>